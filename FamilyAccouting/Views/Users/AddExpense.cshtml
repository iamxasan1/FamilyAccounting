@model FamilyAccouting.Models.ExpenseDto
@using FamilyAccounting.Data.Entities;

<h1>Add Expense</h1>
<div style="width: 500px; align-items:center; align-content:center">
<form class="row g-5" style="width: 400px; margin: auto" asp-controller="Users" asp-action="AddExpense" method="post">
    <div>
        <input name="AmountExpense" class="form-control" asp-for="AmountExpense" type="number" placeholder="amount expense" />
        <span class="text-danger" asp-validation-for="AmountExpense"></span>
    </div>
   
    <div>
        <input name="CreatedAt" class="form-control" asp-for="CreatedAt" type="date" placeholder="CreatedAt" />
        <span class="text-danger" asp-validation-for="CreatedAt"></span>
    </div>
    <div>
       
        <input type="radio" name="Expensetype" value="Food"> Food
        <input type="radio" name="Expensetype" value="Transport"> Transport
        <input type="radio" name="Expensetype" value="Connection"> Connection
        <input type="radio" name="Expensetype" value="Internet"> Internet
        <input type="radio" name="Expensetype" value="Enjoy"> Enjoy
        <input type="radio" name="Expensetype" value="Others"> Others

    </div>
     <div>
        <input name="Description" class="form-control" asp-for="Description" type="text" placeholder="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div>
        <button class="form-control" type="submit">Add expense</button>
    </div>
    <a class="link-info" asp-controller="Users" asp-action="Profile">Profile</a>
</form>
</div>