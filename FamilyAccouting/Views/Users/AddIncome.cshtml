@model FamilyAccouting.Models.IncomeDto
@using FamilyAccounting.Data.Entities;

<h1>Income</h1>
<div style="width: 500px; align-items:center; align-content:center">
<form class="row g-5" style="width: 400px; margin: auto" asp-controller="Users" asp-action="AddIncome" method="post">
    <div>
        <input name="AmountIncome" class="form-control" asp-for="AmountIncome" type="number" placeholder="amount income" />
        <span class="text-danger" asp-validation-for="AmountIncome"></span>
    </div>
   
    <div>
        <input name="CreatedAt" class="form-control" asp-for="CreatedAt" type="date" placeholder="CreatedAt" />
        <span class="text-danger" asp-validation-for="CreatedAt"></span>
    </div>
    <div>
       
        <input type="radio" name="Incometype" value="Salary"> Salary
        <input type="radio" name="Incometype" value="Ranting"> Ranting
        <input type="radio" name="Incometype" value="Ranting"> Others

    </div>
     <div>
        <input name="Description" class="form-control" asp-for="Description" type="text" placeholder="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div>
        <button class="form-control" type="submit">Add Income</button>
    </div>
</form>
    <a class="link-info" asp-controller="Users" asp-action="Profile">Profile</a>
</div>