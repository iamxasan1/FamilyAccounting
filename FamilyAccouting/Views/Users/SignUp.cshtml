@model SignUpUserDto

@{
    ViewData["Title"] = "Sign Up";
}

<h1 style="margin: auto; text-align: center">Sign Up</h1>
<form class="row g-3" style="width: 400px; margin: auto" asp-controller="Users" asp-action="SignUp" enctype="multipart/form-data" method="post">
    <div>
        <input name="Photo" class="form-control" asp-for="Photo" type="file" />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div>
        <input name="FirstName" class="form-control" asp-for="FirstName" type="text" placeholder="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div>
        <input name="LastName" class="form-control" asp-for="LastName" type="text" placeholder="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div>
        <input name="Username" class="form-control" asp-for="Username" type="text" placeholder="Username" />
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div>
        <input name="Password" class="form-control" asp-for="Password" type="text" placeholder="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
        <br />
    <button class="form-control" type="submit">Sign Up</button>
    </div>
    <a class="link-info" asp-controller="Users" asp-action="SignIn">Sign In</a>
</form>